@model DecimalChecker.Models.DecimalNumber

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DecimalNumber</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input" class="control-label"></label>
				<input asp-for="Input" class="form-control" />
				<span asp-validation-for="Input" class="text-danger"></span>
			</div>
			@if (string.IsNullOrEmpty(Model.ErrorMessage) == false)
			{
				<div class="form-group">
					<label asp-for="ErrorMessage" class="control-label"></label>
					<input asp-for="ErrorMessage" disabled class="form-control" />
					<span asp-validation-for="ErrorMessage" class="text-danger"></span>
				</div>
			}
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
